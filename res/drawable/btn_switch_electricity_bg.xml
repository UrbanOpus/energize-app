<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item
	    android:state_active="true">
          <shape>
            <solid
                android:color="@color/btn_switch_gas" />
            <corners
                android:radius="5dp" />
            <size 
                android:width="100dp"
				android:height="40dp" />
        </shape>
    </item>
    
    <item android:left="10dp">
        <bitmap
            android:gravity="left"
            android:src="@drawable/ic_toggle_gas" />
    </item>

</layer-list>