<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAB79D"
    android:orientation="vertical" >

   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >
        
         <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_tile"
            android:src = "@drawable/static_img_safety1"
            android:layout_margin="5dp"
            android:layout_weight="1" 
            android:onClick="goToSavings"
            />

         <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dashboard_tile" 
            android:src = "@drawable/static_img_safety2"
           	android:onClick="goToSavings" 
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_tile"
            android:src = "@drawable/static_img_safety3"
            android:layout_margin="5dp"
            android:layout_weight="1" 
            android:onClick="goToUsage" 
            />

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_tile"
            android:src = "@drawable/static_img_safety4"
            android:layout_margin="5dp"
            android:layout_weight="1" 
            android:onClick="goToCommunity" 
            />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_tile"
            android:src = "@drawable/static_img_safety5"
            android:layout_margin="5dp"
            android:layout_weight="1" 
            android:onClick="goToUsage" 
            />

        <ImageButton
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="@drawable/dashboard_tile"
            android:src = "@drawable/static_img_safety6"
            android:layout_margin="5dp"
            android:layout_weight="1" 
            android:onClick="goToCommunity" 
            />
    </LinearLayout>
</LinearLayout>